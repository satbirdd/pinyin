<p id="notice"><%= notice %></p>

<h1>拼音一览表</h1>

<table>
  <thead>
    <tr>
      <th>拼音</th>
      <th>类型</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_letters.each do |letter| %>
      <tr>
        <td><%= letter.name %></td>
        <td><%= letter.category %></td>
        <td><%= link_to '详细', letter %></td>
        <td><%= link_to '编辑', edit_admin_letter_path(letter) %></td>
        <td><%= link_to '删除', admin_letter_path(letter), method: :delete, data: { confirm: '确定删除么' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加新的拼音', new_admin_letter_path %>
