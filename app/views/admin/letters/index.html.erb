<p id="notice"><%= notice %></p>

<h1>Listing Admin Letters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_letters.each do |letter| %>
      <tr>
        <td><%= letter.name %></td>
        <td><%= letter.category %></td>
        <td><%= link_to 'Show', letter %></td>
        <td><%= link_to 'Edit', edit_admin_letter_path(letter) %></td>
        <td><%= link_to 'Destroy', admin_letter_path(letter), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Letter', new_admin_letter_path %>
