<p id="notice"><%= notice %></p>

<h1>试卷一览表</h1>

<table class='table'>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_papers.each do |paper| %>
      <tr>
        <td><%= paper.name %></td>
        <td><%= link_to '详细', admin_paper_path(paper) %></td>
        <td><%= link_to '编辑', edit_admin_paper_path(paper) %></td>
        <td><%= link_to '删除', admin_paper_path(paper), method: :delete, data: { confirm: '确定删除么？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

