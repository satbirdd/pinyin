<p id="notice"><%= notice %></p>

<h1>测试试卷一览</h1>

<table class='table'>
  <thead>
    <tr>
      <th>拼音</th>
      <th>顺序</th>
      <th>描述</th>
      <th colspan='2'></th>
    </tr>
  </thead>

  <tbody>
    <% @papers.each do |paper| %>
      <tr data-test-paper-id="<%= paper.id %>" class="test-paper">
        <td><%= paper.name %></td>
        <td><%= paper.order %></td>
        <td><%= paper.description %></td>
        <td>tested <%= paper.tests.count %> Times<%= link_to "查看详细", paper_tests_path(paper) %> </td>
        <td><%= button_to "Test", paper_tests_path(paper) %></td>
      </tr>
    <% end %>
  </tbody>
</table>