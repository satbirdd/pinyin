<p id="notice"><%= notice %></p>

<h1>拼音字母一览</h1>

<table class='table'>
  <thead>
    <tr>
      <th>类型</th>
      <th>拼音</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @letters.each do |letter| %>
      <tr>
        <td><%= letter.category %></td>
        <td><%= letter.name %></td>
        <td><%= link_to '详细', letter %></td>
        <td><%= link_to '编辑', edit_letter_path(letter) %></td>
        <td><%= link_to '删除', letter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

